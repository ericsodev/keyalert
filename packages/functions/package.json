{
  "name": "functions",
  "version": "0.1.0",
  "bin": {
    "database": "bin/api.js"
  },
  "scripts": {
    "watch": "tsc -w",
    "test": "jest",
    "build": "tsx build.ts",
    "synthesize": "NODE_ENV=development cdk synthesize",
    "synthesize:production": "NODE_ENV=production cdk synthesize",
    "start:internal": "NODE_ENV=development pnpm run synthesize InternalLambdaStack && sam local start-lambda -t cdk.out/InternalLambdaStack.template.json --skip-pull-image",
    "deploy:all": "NODE_ENV=production cdk deploy --all",
    "deploy:vpc": "NODE_ENV=production cdk deploy VpcStack",
    "deploy:security": "NODE_ENV=production cdk deploy SecurityStack",
    "deploy:api": "NODE_ENV=production cdk deploy ApiStack",
    "deploy:lambda": "NODE_ENV=production cdk deploy InternalLambdaStack",
    "deploy:database": "NODE_ENV=production cdk deploy DatabaseStack",
    "deploy:bastion": "NODE_ENV=production cdk deploy BastionStack",
    "destroy:all": "NODE_ENV=production cdk destroy '*'",
    "db:migrate:new": "kysely migrate:make --cwd ./db",
    "db:seed": "kysely seed:run --cwd ./db",
    "db:seed:new": "kysely seed:make --cwd ./db",
    "db:init": "tsx ./scripts/init-dev-db.ts",
    "db:migrate": "NODE_ENV=development tsx ./scripts/db-migration-script.ts",
    "db:production:migrate": "dotenvx run -f .env.production --env NODE_ENV=production -- tsx ./scripts/db-migration-script.ts",
    "db:rollback": "NODE_ENV=development tsx ./scripts/db-rollback-script.ts",
    "db:production:rollback": "dotenvx run -f .env.production --env NODE_ENV=production -- tsx ./scripts/db-rollback-script.ts",
    "test:db:production": "dotenvx run -f .env.production --env NODE_ENV=production -- tsx ./scripts/test-prod-db.ts",
    "typecheck": "tsc --noemit",
    "lint": "eslint -c eslint.config.mjs .",
    "lint:fix": "eslint -c eslint.config.mjs --fix ."
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@types/pg": "^8.11.10",
    "@types/ssh2": "^1.15.1",
    "aws-cdk": "2.172.0",
    "aws-cdk-lib": "2.172.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "kysely-ctl": "^0.10.1",
    "ssh2": "^1.16.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "type-fest": "^4.31.0",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.18.2"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.31.0",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.7",
    "kysely": "^0.27.5",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  }
}
