{
  "name": "functions",
  "version": "0.1.0",
  "bin": {
    "database": "bin/api.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "synthesize": "cdk synthesize",
    "deploy:all": "cdk deploy --all",
    "deploy:vpc": "cdk deploy VpcStack",
    "deploy:security": "cdk deploy SecurityStack",
    "deploy:api": "cdk deploy ApiStack",
    "deploy:database": "cdk deploy DatabaseStack",
    "deploy:bastion": "cdk deploy BastionStack",
    "destroy:all": "cdk destroy '*'",
    "db:init": "tsx ./scripts/init-dev-db.ts",
    "db:migrate": "NODE_ENV=development tsx ./scripts/db-migration-script.ts",
    "db:production:migrate": "dotenvx run -f .env.production --env NODE_ENV=production -- tsx ./scripts/db-migration-script.ts",
    "db:rollback": "NODE_ENV=development tsx ./scripts/db-rollback-script.ts",
    "db:production:rollback": "dotenvx run -f .env.production --env NODE_ENV=production -- tsx ./scripts/db-rollback-script.ts",
    "test:db:production": "dotenvx run -f .env.production --env NODE_ENV=production -- tsx ./scripts/test-prod-db.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@types/pg": "^8.11.10",
    "@types/ssh2": "^1.15.1",
    "aws-cdk": "2.172.0",
    "aws-cdk-lib": "2.172.0",
    "jest": "^29.7.0",
    "ssh2": "^1.16.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.31.0",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.7",
    "kysely": "^0.27.5",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  }
}
